kvmd:
    gpio:
        drivers:
            tes:
                type: tesmart
                host: {{ pikvm_tesmart_kvm_addr }}
                port: {{ pikvm_tesmart_kvm_port }}
        scheme:
            server0_led:
                driver: tes
                pin: 0
                mode: input
            server0_switch:
                driver: tes
                pin: 0
                mode: output
                switch: false
            server1_led:
                driver: tes
                pin: 1
                mode: input
            server1_switch:
                driver: tes
                pin: 1
                mode: output
                switch: false
            server2_led:
                driver: tes
                pin: 2
                mode: input
            server2_switch:
                driver: tes
                pin: 2
                mode: output
                switch: false
            server3_led:
                driver: tes
                pin: 3
                mode: input
            server3_switch:
                driver: tes
                pin: 3
                mode: output
                switch: false
            server4_led:
                driver: tes
                pin: 4
                mode: input
            server4_switch:
                driver: tes
                pin: 4
                mode: output
                switch: false
            server5_led:
                driver: tes
                pin: 5
                mode: input
            server5_switch:
                driver: tes
                pin: 5
                mode: output
                switch: false
            server6_led:
                driver: tes
                pin: 6
                mode: input
            server6_switch:
                driver: tes
                pin: 6
                mode: output
                switch: false
            server7_led:
                driver: tes
                pin: 7
                mode: input
            server7_switch:
                driver: tes
                pin: 7
                mode: output
                switch: false
        view:
            table:
                - ["TESMART Switch"]
                - []
                - ["#cp01", server0_led, server0_switch|Switch]
                - ["#cp02", server1_led, server1_switch|Switch]
                - ["#cp03", server2_led, server2_switch|Switch]
                - ["#w01", server3_led, server3_switch|Switch]
                - ["#w02", server4_led, server4_switch|Switch]
                - ["#w03", server5_led, server5_switch|Switch]
                - ["#empty", server6_led, server6_switch|Switch]
                - ["#atlas", server7_led, server7_switch|Switch]
