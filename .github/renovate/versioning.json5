{
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^(?<major>\\d{2}).(?<minor>\\d{1,2})-(?<compatibility>.*)$",
      "matchPackageNames": [
        "postgres"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "versioning": "regex:^[\\w-]*(?<major>\\d{1,2}).(?<minor>\\d{1,2}).(?<patch>\\d{1,2})$",
      "matchPackageNames": [
        "cloudnative-pg/cloudnative-pg"
      ]
    },
    {
      "matchDatasources": [
        "docker",
        "github-releases"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "plexinc/pms-docker",
        "reactive-tech/kubegres",
        "raspberrypi/rpi-eeprom",
      ]
    },
  ]
}
