# .ansible-lint
skip_list:
  - yaml[line-length]
  - no-changed-when
  - deprecated-command-syntax

warn_list:
  - command-instead-of-shell
  - template-instead-of-copy

exclude_paths:
  - ../../.github/
  - ../../.taskfiles/
  - ../../.vscode/
  - ../../infrastructure/terraform/
  - ../../docker/
  - ../../docs/
  - ../../infrastructure/talos/
  - ../../kubernetes/
  - ../../scripts/
  - ../../Taskfile.yml
