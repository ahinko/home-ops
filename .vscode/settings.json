{
  "files.associations": {
    "*.json5": "json5",
    "**/infrastructure/ansible/**/*.yaml": "ansible",
    "**/infrastructure/**/inventory/**/*.yaml": "yaml",
  },
  "material-icon-theme.folders.associations": {
    // top level
    ".github/workflows": "ci",
    ".private": "archive",
    ".renovate": "robot",
    "bootstrap": "seeders",
    "flux": "pipe",
    "talos": "linux",
    // namespaces
    "actions-runner-system": "github",
    "cert-manager": "guard",
    "home-automation": "home",
    "security": "secure",
    "flux-system": "pipe",
    "kube-system": "kubernetes",
    "networking": "connection",
    "observability": "event",
    "openebs-system": "base",
    "rook-ceph": "dump",
    "selfhosted": "server",
    "storage": "aws"
  },
  "prettier.configPath": ".github/linters/.prettierrc.yaml",
  "prettier.ignorePath": ".github/linters/.prettierignore",
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "ansible": "ansible/**/*.yml",
    "kubernetes": "kubernetes/*.yaml",
    "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/kustomization.json": "**/kustomization.yaml",
    "https://raw.githubusercontent.com/fluxcd-community/flux2-schemas/main/kustomization-kustomize-v1.json": "**/install.yaml",
    "https://raw.githubusercontent.com/fluxcd-community/flux2-schemas/main/helmrelease-helm-v2.json": "**/helm-release.yaml",
    "https://kubernetes-schemas.pages.dev/monitoring.coreos.com/prometheusrule_v1.json": "**/prometheus-rule.yaml",
    "https://kubernetes-schemas.pages.dev/external-secrets.io/externalsecret_v1": "**/external-secrets.yaml",
    "https://kubernetes-schemas.pages.dev/monitoring.coreos.com/podmonitor_v1.json": "**/pod-monitor.yaml",
    "https://kubernetes-schemas.pages.dev/gateway.networking.k8s.io/httproute_v1.json": "**/httproute.yaml",
    "https://kubernetes-schemas.pages.dev/source.toolkit.fluxcd.io/ocirepository_v1beta2.json": "**/oci-repository.yaml"
  },
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.hover.delay": 1500,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.stickyScroll.enabled": false,
  "editor.rulers": [100],
  "explorer.autoReveal": false,
  "files.trimTrailingWhitespace": true,
}
